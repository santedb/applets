<BiParameterDefinition xmlns="http://santedb.org/bi" id="org.santedb.bi.core.parameter.patient.gender" name="patient-gender" label="ui.bi.core.patient.gender" type="uuid">
  <meta>
    <authors>
      <add>Justin Fyfe (Fyfe Software Inc.) &lt;justin@fyfesoftware.ca></add>
    </authors>
    <annotation lang="en">
      <div xmlns="http://www.w3.org/1999/xhtml">
        <p>This parameter defines values for patient genders</p>
      </div>
    </annotation>
  </meta>
  <query>
    <dataSources>
      <add ref="#org.santedb.bi.dataSource.main" name="main"/>
    </dataSources>
    <definitions>
      <add>
        <providers>
          <invariant>npgsql</invariant>
          <invariant>FirebirdSQL</invariant>
        </providers>
        <![CDATA[
           select distinct
            cd_id as id, UPPER(val) val
            from cd_set_mem_assoc_tbl 
              inner join cd_vrsn_tbl using (cd_id) 
              left join cd_name_tbl using (cd_id) 
            where 
              obslt_vrsn_seq_id is null 
              and lang_cs = COALESCE(${Context.Language}, 'en')
              and set_id = 'e9eecd3c-7b80-47f9-9cb6-55c8d3110fb0'   
            ]]>
      </add>
      <add>
        <providers>
          <invariant>sqlite</invariant>
        </providers>
        <![CDATA[
           select distinct
            cd_id as id, UPPER(val) val 
            from cd_set_mem_assoc_tbl 
              inner join cd_vrsn_tbl using (cd_id) 
              left join cd_name_tbl using (cd_id) 
            where 
              obslt_vrsn_seq_id is null 
              and lang_cs = COALESCE(${Context.Language}, 'en')
              and set_id = X'3CCDEEE9807BF9479CB655C8D3110FB0'
            ]]>
      </add>
    </definitions>
  </query>
</BiParameterDefinition>